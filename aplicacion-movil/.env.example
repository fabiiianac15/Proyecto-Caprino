# Variables de entorno para aplicación móvil

# URL base de la API (usar HTTPS en producción)
VITE_API_URL=https://api.tudominio.com/api

# Timeout de peticiones HTTP (milisegundos)
VITE_API_TIMEOUT=15000

# Nombre de la aplicación
VITE_APP_NAME=Gestión Caprino Móvil

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Habilitar modo debug
VITE_DEBUG=false

# Configuración de sincronización
VITE_SYNC_INTERVAL=60000
VITE_MAX_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=5000

# Configuración de caché
VITE_CACHE_DURATION=3600000
