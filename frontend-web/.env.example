# Variables de entorno para el frontend

# URL base de la API
VITE_API_URL=http://localhost:8000/api

# Timeout de peticiones HTTP (milisegundos)
VITE_API_TIMEOUT=10000

# Nombre de la aplicación
VITE_APP_NAME=Sistema de Gestión Zootécnica Caprina

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Entorno (development, staging, production)
VITE_ENV=development

# Habilitar modo debug
VITE_DEBUG=true

# Intervalo de actualización automática (milisegundos)
VITE_REFRESH_INTERVAL=300000

# Número de registros por página por defecto
VITE_ITEMS_PER_PAGE=30
